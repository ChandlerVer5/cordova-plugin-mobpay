      <source-file src="src/android/PaySDK/libs/x86_64/libentryexpro.so" target-dir="libs/x86_64" />
      <source-file src="src/android/PaySDK/libs/x86_64/libuptsmaddon.so" target-dir="libs/x86_64" />
